@model IEnumerable<Bugtracker.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.projId })
</p>
<table class="table">
    <tr>
        <th>
            Project Name
        </th>
        <th>
            Ticket Author
        </th>
        <th>
            Ticket Title
        </th>
        <th>
            Description
        </th>
        <th>
            Status
        </th>
        <th>
            Ticket Type
        </th>
        <th>
            Priority
        </th>
        <th>
            Created
        </th>
        <th>
            Updated
        </th>
        <th>
            User Assigned
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Project.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author.UserName)
        </td>
        <td>
           @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>
        <td>
            @item.Status.Name
        </td>
        <td>
            @item.TicketType.Type
        </td>
        <td>
            @item.Priority.Name
        </td>
        <td>
            @item.Created.ToString("d")
        </td>
        <td>
            @if (item.Updated.HasValue)
            {
                item.Updated.Value.ToString("d");
            }
        </td>
        <td>
            @if (item.AssignedUser != null)
            {
                @item.AssignedUser.UserName;
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
