@using Microsoft.AspNet.Identity;
@using Bugtracker.Models;
@using System.Linq;

<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Bugtracks | Issue Tracking Management System</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    @RenderSection("CustomCSS", false)

    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
          page. However, you can choose any other skin. Make sure you
          apply the skin class to the body tag so the changes take effect.
    -->
    <link rel="stylesheet" href="~/dist/css/skins/skin-blue.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href='https://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Yanone+Kaffeesatz' rel='stylesheet' type='text/css'>
    <link href="~/dist/css/animate.css" rel="stylesheet" />
    <link href="~/dist/css/custom.css" rel="stylesheet" />
</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to get the
desired effect
|---------------------------------------------------------|
| SKINS         | skin-blue                               |
|               | skin-black                              |
|               | skin-purple                             |
|               | skin-yellow                             |
|               | skin-red                                |
|               | skin-green                              |
|---------------------------------------------------------|
|LAYOUT OPTIONS | fixed                                   |
|               | layout-boxed                            |
|               | layout-top-nav                          |
|               | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->
<body class="hold-transition skin-blue @ViewBag.layout">
    <div class="wrapper">
        <!-- Main Header -->
        <header class="main-header">
            <!-- Logo -->
            <a href="@Url.Action("index", "Home")" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini gfont"><b>BTS</b></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg gfont"><b>Bug</b>Tracks</span>
            </a>
            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                @if (User.Identity.IsAuthenticated)
                {
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                }
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Messages: style can be found in dropdown.less-->
                        @if (User.Identity.IsAuthenticated)
                        {
                        <!-- Notifications Menu -->
                        <li class="dropdown messages-menu">
                            <!-- Menu toggle button -->
                            @if (User.Identity.IsAuthenticated && ViewBag.Notifications.Count > 0)
                            {
                                <a href="#" class="dropdown-toggle animatethis animated pulse infinite" data-toggle="dropdown">
                                    <i class="fa fa-bell-o"></i>
                                    <span class="label label-warning">@ViewBag.Notifications.Count</span>
                                </a>
                            }
                            else
                            {
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-bell-o"></i>
                                    <span class="label label-warning">@ViewBag.Notifications.Count</span>
                                </a>
                            }

                            <ul class="dropdown-menu">
                                <li class="header">You have @ViewBag.Notifications.Count notifications</li>
                                <li>
                                    <!-- Inner Menu: contains the notifications -->
                                    <ul class="menu">
                                        @if (User.Identity.IsAuthenticated && ViewBag.Notifications.Count != 0)
                                        {
                                            foreach (var notification in ViewBag.Notifications)
                                            {
                                            <li><!-- start notification -->
                                                <a href="@Url.Action("DismissNotification", "Home", new { tId = notification.TicketId, nId = notification.id, da = false })">
                                                    @if (notification.TypeId == 1)
                                                    {
                                                        <div class="pull-left">
                                                            <img src="@notification.AuthorProfile" class="img-circle" alt="User Image">
                                                        </div>
                                                        <h4>
                                                            @notification.Ticket.Title
                                                            <small><i class="fa fa-clock-o"></i> @TimeHelper.TimeAgo(notification.Created)</small>
                                                        </h4>
                                                        <span class="label label-danger">@notification.Description</span>
                                                    }
                                                    @if (notification.TypeId == 2)
                                                    {
                                                        <div class="pull-left">
                                                            <img src="@notification.AuthorProfile" class="img-circle" alt="User Image">
                                                        </div>
                                                        <h4>
                                                            @notification.Ticket.Title
                                                            <small><i class="fa fa-clock-o"></i> @TimeHelper.TimeAgo(notification.Created)</small>
                                                        </h4>
                                                        <span class="label label-info">@notification.Description</span>
                                                    }
                                                    @if (notification.TypeId == 3)
                                                    {
                                                        <div class="pull-left">
                                                            <img src="@notification.AuthorProfile" class="img-circle" alt="User Image">
                                                        </div>
                                                        <h4>
                                                            @notification.Ticket.Title
                                                            <small><i class="fa fa-clock-o"></i> @TimeHelper.TimeAgo(notification.Created)</small>
                                                        </h4>
                                                        <span class="label label-warning">@notification.Description</span>
                                                    }
                                                    @if (notification.TypeId == 4)
                                                    {
                                                        <div class="pull-left">
                                                            <img src="@notification.AuthorProfile" class="img-circle" alt="User Image">
                                                        </div>
                                                        <h4>
                                                            @notification.Ticket.Title
                                                            <small><i class="fa fa-clock-o"></i> @TimeHelper.TimeAgo(notification.Created)</small>
                                                        </h4>
                                                        <span class="label label-primary">@notification.Description</span>
                                                    }
                                                    @if (notification.TypeId == 5)
                                                    {
                                                        <div class="pull-left">
                                                            <img src="@notification.AuthorProfile" class="img-circle" alt="User Image">
                                                        </div>
                                                        <h4>
                                                            @notification.Ticket.Title
                                                            <small><i class="fa fa-clock-o"></i> @TimeHelper.TimeAgo(notification.Created)</small>
                                                        </h4>
                                                        <span class="label label-success">@notification.Description</span>
                                                    }
                                                </a>
                                            </li><!-- end notification -->
                                            }
                                        }
                                    </ul>
                                </li>
                                <li class="footer"><a href="@Url.Action("DismissNotification", "Home", new { da = true })">Dismiss all</a></li>
                            </ul>
                        </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                        <!-- User Account Menu -->
                        <li class="dropdown user user-menu">
                            <!-- Menu Toggle Button -->
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <!-- The user image in the navbar-->
                                <img src="@ViewBag.ProfileIcon" class="user-image" alt="User Image">
                                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                <span class="hidden-xs">@ViewBag.DisplayName</span>
                            </a>
                            <ul class="dropdown-menu col-xs-12">
                                <!-- The user image in the menu -->
                                <li class="user-header">
                                    <img src="@ViewBag.ProfileIcon" class="img-circle" alt="User Image">
                                    <p>
                                        @ViewBag.DisplayName
                                        <small>@ViewBag.FirstName @ViewBag.LastName</small>
                                    </p>
                                </li>
                                <!-- Menu Body -->
                                @*<li class="user-body">
                                    <div class="col-xs-12">
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Followers</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Sales</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Friends</a>
                                        </div>
                                    </div>
                                </li>*@

                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="@Url.Action("Index", "Manage")" class="btn btn-default btn-flat">Profile</a>
                                    </div>
                                    <div class="pull-right">
                                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">Sign out</a>
                                    }
                                    </div>
                                </li>

                            </ul>
                        </li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                            <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                        }
                        <!-- Control Sidebar Toggle Button -->
                        <li>
                            <a href="#" data-toggle="control-sidebar"><i class="fa fa-users"></i></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="@ViewBag.ProfileIcon" style="vertical-align:middle" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                              @ViewBag.DisplayName               
                    </div>


                </div>
                
                <!-- Sidebar Menu -->
                <ul class="sidebar-menu">
                    <li class="header">Navigation</li>
                    <!-- Optionally, you can add icons to the links -->
                    <li class="@(ViewBag.Current == "Home" ? "active" : "")"><a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i> <span>Home</span></a></li>
                    <li class="@(ViewBag.Current == "Profile" ? "active" : "")"><a href="@Url.Action("Index","Manage")"><i class="fa fa-users"></i> <span>Profile</span></a></li>
                    <li class="@(ViewBag.Current == "Dashboard" ? "active" : "")"><a href="@Url.Action("UserPanel","Home")"><i class="fa fa-dashboard"></i> <span>Dashboard</span></a></li>
                    @if (User.IsInRole("Administrator"))
                    {
                        <li class="treeview @(ViewBag.Current == "Manage Users" ? "active" : "")">
                            <a href="#"><i class="fa fa-link"></i> <span>Administrator</span> <i class="fa fa-angle-left pull-right"></i></a>
                            <ul class="treeview-menu">
                                <li><a href="@Url.Action("ManageUsers","Admin")"><i class="fa fa-circle-o"></i> Manage Users</a></li>
                            </ul>
                        </li>
                    }

                    @if (User.IsInRole("Administrator") || User.IsInRole("Project Manager") || User.IsInRole("Developer"))
                    {
                    <li class="treeview @(ViewBag.Current == "Projects" ? "active" : "")">
                        <a href="#"><i class="fa fa-table"></i> <span>Projects</span> <i class="fa fa-angle-left pull-right"></i></a>
                        <ul class="treeview-menu">
                            @if (User.IsInRole("Administrator"))
                            {
                            @*<li><a href="@Url.Action("Create", "Projects")"><i class="fa fa-circle-o"></i> Create New</a></li>*@
                            }
                            @if (!User.IsInRole("Administrator"))
                            {
                            <li><a href="@Url.Action("Index", "Projects")"><i class="fa fa-circle-o"></i> Your Projects</a></li>
                            }
                            <li><a href="@Url.Action("Index", "Projects", new { view = "all"})"><i class="fa fa-circle-o"></i> View All</a></li>
                        </ul>
                    </li>
                    }
                    <li class="treeview @(ViewBag.Current == "Tickets" ? "active" : "")">
                        <a href="#"><i class="fa fa-ticket"></i> <span>Tickets</span> <i class="fa fa-angle-left pull-right"></i></a>
                        <ul class="treeview-menu">
                            @*<li><a href="@Url.Action("Create","Tickets")"><i class="fa fa-circle-o"></i> Create New</a></li>*@
                            @if (!User.IsInRole("Administrator"))
                            {
                            <li><a href="@Url.Action("Index", "Tickets")"><i class="fa fa-circle-o"></i> Your Tickets</a></li>
                            }
                            <li><a href="@Url.Action("Index","Tickets", new { view = "all"})"><i class="fa fa-circle-o"></i> View All</a></li>
                        </ul>
                    </li>
                </ul><!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            @*<section class="content-header">
            </section>*@
        @*<br class="clearfix" />*@
            <!-- Main content -->
        @RenderSection("header",false)
            <section class="content">
                @RenderBody()
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.3.0
            </div>
            <img src="~/dist/img/icon_footer.jpg" width="10%" /><br />
            <strong>Copyright &copy; 2016</strong>

        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Create the tabs -->
            <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
                <li class="active"><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-users"></i> Guest Login</a></li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <!-- Home tab content -->
                <div class="tab-pane active" id="control-sidebar-home-tab">
                    @*<h3 class="control-sidebar-heading">Guest Logins</h3>*@
                    <ul class="control-sidebar-menu">
                        <li>
                            <a href="@Url.Action("GuestUserLogin","Account", new { guestid = 4 })">
                                <img src="~/dist/img/icon_admin.jpg" class="menu-icon img-circle"/> 
                                <div class="menu-info">
                                    <h4 class="control-sidebar-subheading">Administrator</h4>
                                    <p>Guest Login Account</p>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("GuestUserLogin","Account", new { guestid = 3 })">
                                <img src="~/dist/img/icon_projectmanager.jpg" class="menu-icon img-circle"/>
                                <div class="menu-info">
                                    <h4 class="control-sidebar-subheading">Project Manager</h4>
                                    <p>Guest Login Account</p>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("GuestUserLogin","Account", new { guestid = 2 })">
                                <img src="~/dist/img/icon_developer.jpg" class="menu-icon img-circle" />
                                <div class="menu-info">
                                    <h4 class="control-sidebar-subheading">Developer</h4>
                                    <p>Guest Login Account</p>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("GuestUserLogin","Account", new { guestid = 1 })">
                                <img src="~/dist/img/icon_submitter.jpg" class="menu-icon img-circle" />
                                <div class="menu-info">
                                    <h4 class="control-sidebar-subheading">Submitter</h4>
                                    <p>Guest Login Account</p>
                                </div>
                            </a>
                        </li>
                    </ul><!-- /.control-sidebar-menu -->
                </div><!-- /.tab-pane -->
                <!-- Stats tab content -->
                @*<div class="tab-pane" id="control-sidebar-stats-tab">Stats Tab Content</div><!-- /.tab-pane -->
                <!-- Settings tab content -->
                <div class="tab-pane" id="control-sidebar-settings-tab">
                    <form method="post">
                        <h3 class="control-sidebar-heading">General Settings</h3>
                        <div class="form-group">
                            <label class="control-sidebar-subheading">
                                Report panel usage
                                <input type="checkbox" class="pull-right" checked>
                            </label>
                            <p>
                                Some information about this general settings option
                            </p>
                        </div><!-- /.form-group -->
                    </form>
                </div><!-- /.tab-pane -->*@
            </div>
        </aside><!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div><!-- ./wrapper -->
    <!-- REQUIRED JS SCRIPTS -->
    <!-- jQuery 2.1.4 -->
    <script src="~/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/app.min.js"></script>
    <!-- Optionally, you can add Slimscroll and FastClick plugins.
         Both of these plugins are recommended to enhance the
         user experience. Slimscroll is required when using the
         fixed layout. -->

    @RenderSection("CustomJS", false)
</body>
</html>
